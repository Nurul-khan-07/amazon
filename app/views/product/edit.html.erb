<h1>Product#edit</h1>
<p>Find me in app/views/product/edit.html.erb</p>




<%= form_for @product do |form| %>

  <p>
    <strong>Product Name</strong>
    <%= form.text_field :pr_name %>
  </p>

  <p>
    <strong>Product Category</strong>
    <%= form.text_field :pr_category %>
  </p>

  <p>
    <strong>Product Price</strong>
    <%= form.text_field :pr_price %>
  </p>

  <p>
    <strong>Product Details</strong>
    <%= form.text_field :pr_details %>
  </p>

  <p>
    <%= form.submit 'updating product' %>
  </p>

<% end %>

<%= link_to 'Back', products_path %>

