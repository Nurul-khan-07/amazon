<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<button type="button" class="btn btn-success"><%= link_to "create item", new_item_path %> </button>


<div>
  <% if @item.present? %>
    <table>
      <thead>
        <td><strong>item name</strong> </td>
        <td><strong>category</strong> </td>
        <td><strong>price</strong> </td>
        <td><strong>details</strong> </td>
        <td><strong>actions</strong> </td>
      </thead>
      <tbody>
        <% @item.each do |item| %>
        <tr>
          <td><%= item.item_name %></td>
          <td><%= item.item_cat %></td>
          <td><%= item.item_price %></td>
          <td><%= item.item_details %></td>
          <td><button type="button" class="btn btn-warning"><%= link_to "Edit",edit_item_path(item.id) %></button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    record not found
  <% end %>

</div>
